{
    "name": "duongtdvn/blade-lucide-icons",
    "description": "A package to easily make use of Lucide icons in your Laravel Blade views.",
    "keywords": ["Blade", "Lucide icons", "Laravel"],
    "homepage": "https://github.com/duongtdvn/blade-lucide-icons",
    "license": "MIT",
    "authors": [
        {
            "name": "Duong Truong"
        }
    ],
    "require": {
        "php": "^8.2",
        "blade-ui-kit/blade-icons": "^1.6",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "BladeUI\\LucideIcons\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BladeUI\\LucideIcons\\BladeLucideIconsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
